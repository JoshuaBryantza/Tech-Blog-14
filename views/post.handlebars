<div class="text-center">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{content}}</p>
  <p>Created by {{user.title}} on {{ date_created}}</p>

  {{#if logged_in}}
    <form class="form post-comment-form" data-post-id="{{id}}">
      <div class="form-group">
        <label for="post-comment">Comment</label>
        <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form> 
  {{/if}}
    {{#if comments.length}}
      <div class="col-md-12 comment-list">
        
        {{#each comments as |comment|}}
        
          <div class="row mb-4 project">
            <div class="col-md-12">
              <p class="comment-user">
                {{comment.user.name}} - {{format_datetime comment.date_created}}                
              </p>
            </div>
            <div class="col-md-12">
              <p>
                {{comment.content}}
              </p>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}

</div>

<script src="/js/post.js"></script>
